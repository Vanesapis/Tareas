@model Tareas.Models.CategoriaProducto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MostrarModificar</h2>

<div class="row">
    <div class="col-lg-6">
        <form method="post" action="@Url.Action("Editar/"+@Model.Id, "Categoria")" enctype="multipart/form-data">


            <div class="form-group">
                <label for="idCategoria">ID Categoria</label>
                <input type="number" name="idCategoria" class="form-control" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="@Model.Nombre" />
            </div>
            <div class="form-group">
                <label for="imagen">Imagen</label>
                <input type="file" name="imagen" class="form-control" />
            </div>



            <input type="submit" value="Guardar" class="btn btn-primary" />
        </form>


    </div>
    <div class="col-lg-6">
        Imagen Actual:
        <img src="~/Content/img/cat/@Model.imagen" width="700" />
    </div>
</div>
